<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_utama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sparda.kalkulatorsehat.ActivityMenuUtama">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/air"
        android:id="@+id/imageView1"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/berat"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/tinggi"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/riwayat"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/tentang"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/keluar"
        android:id="@+id/imageView6"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/button_1"
        android:id="@+id/button1"
        android:layout_marginTop="14dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:gravity="left|center"
        android:layout_width="260dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1"
        android:textAllCaps="false"
        tools:ignore="RtlHardcoded" />

    <Button
        android:text="@string/button_2"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/button2"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:gravity="left|center"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1"
        tools:ignore="RtlHardcoded" />

    <Button
        android:text="@string/button_3"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/button3"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:gravity="left|center"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <Button
        android:text="@string/button_4"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/button4"
        android:gravity="left|center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:text="@string/button_5"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:gravity="left|center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@android:color/transparent" />

    <Button
        android:text="@string/button_6"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/button6"
        android:gravity="left|center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

</RelativeLayout>
